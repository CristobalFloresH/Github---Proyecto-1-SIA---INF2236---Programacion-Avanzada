public Pasaje buscarPasaje(int idPasaje) {
    for (int i = 0; i < pasajes.size(); i++) {   
        Pasaje actual = pasajes.get(i);               
        if (actual.getIdPasaje() == idPasaje) {       
            return actual;                            
        }
    }
    return null; 
}

public boolean buscarPasajero(String rut) {
    for (int i = 0; i < listaPasajeros.size(); i++) {
        if (listaPasajeros.get(i).equals(rut)) {
            return true; 
        }
    }
    return false; 
}
